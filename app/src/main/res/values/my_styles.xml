<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="startPageTextApperarance">
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mainPageTextApperarance">
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="exitDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/animate_slide_up_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_slide_down_exit</item>
    </style>

</resources>